!!!5
%html
  %head
    %title My Lunch In : #{controller.controller_name}.#{controller.action_name}
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag
  %body
    #wrapper
      -# HEADER CONTENT
      #header
        .inner
          .logo
            %a{:href => root_url}
              %img{:src => 'http://placehold.it/280x60&text=My+Lunch+In+Logo', :alt => 'Welcome to My Lunch In'}
              / %images{:alt => "My Lunch In", :src => "images/logo.png"}/
          -# navigation
          = render :partial => "layouts/navigation"
          / #nav end
          .clear
      / MAIN CONTENT START
      = yield
      / FOOTER CONTENT START
      = render :template => "layouts/footer"

